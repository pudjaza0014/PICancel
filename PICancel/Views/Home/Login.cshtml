
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="user">
    <center>
        <div class="form-group">
            <input type="text" class="form-control vw-100" id="txtUserName" aria-describedby="emailHelp" placeholder="Enter OPID...">
        </div>
        <div class="form-group">
            <input type="password" class="form-control " id="txtPassword" placeholder="Password">
        </div>
        <button id="btnLogin" class="btn btn-primary btn-user  btn-block"> Login</button>

    </center>
</div>

@section Scripts    {

    <script>

        $(document).ready(function ()
        {
        var COMPUTERNAME = '@ViewBag.COMPUTERNAME';
        var USERNAME = '@ViewBag.USERNAME';
            sessionStorage.setItem("ssUSERNAME", USERNAME);
            sessionStorage.setItem("ssCOMPUTERNAME", COMPUTERNAME);
        });

    onReady(function () {
        $("#txtUserName").focus();
            return false;
        });
        function onReady(callback) {
            var intervalId = window.setInterval(function () {
                if (document.getElementsByTagName('body')[0] !== undefined) {
                    window.clearInterval(intervalId);
                    callback.call(this);
                }
            }, 1000);
        };


        $("#btnLogin").on("click", function () {
             $.ajax({
            type: 'POST',
                 url: '@Url.Action("ChkLogin", "Home")',
                 data: { OPID: $("#txtUserName").val(), Password: $("#txtPassword").val()},
            dataType: 'json',
                 success: function (Data) {
                     if (Data.strboolbel == true && Data.strResult == "OK") {
                         try {
                             if (window.opener) {
                                 //window.opener.location.href = "@Url.Action("Index","Home")";
                                 window.open("@Url.Action("Index", "Home")", '_blank');
                             } else {

                                 window.open("@Url.Action("Index","Home")", '_blank');
                             }
                             var win = window.open("about:blank", "_self");
                             win.close();


                         }
                         catch (err) {
                             Swal.fire({
                                 icon: 'error',
                                 title: "error",
                                 text: err.message,
                                 type: 'error',
                             })

                         }
                        //window.location.href = "@Url.Action("Index")";
                    }
                        else {
                        $("#txtUserName").val("");
                        $("#txtPassword").val("");

                        Swal.fire({
                            icon: 'warning',
                            title: "Warning",
                            text: Data.dataLabel,
                            type: 'warning',
                        }).then(function () {
                            $("#txtUserName").focus();
                            return false;
                            });
                        }
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
        });

        $("#txtUserName").on("keypress", function (e) {
            if (e.which == 13) {
                if (this.value == "") {
                    Swal.fire({
                        icon: 'warning',
                        title: "Warning",
                        text: "Please Provide OPID.",
                        type: 'warning',
                    })
                    $("#txtUserName").focus();
                    return false;
                } else {
                    $("#txtPassword").focus();
                }
            }
        });
        $("#txtPassword").on("keypress", function (e) {
            if (e.which == 13) {
                if (this.value == "") {
                    Swal.fire({
                        icon: 'warning',
                        title: "Warning",
                        text: "Please Provide Password.",
                        type: 'warning',
                    })
                    $("#txtPassword").focus();
                    return false;
                } else {
                    $("#btnLogin").click();
                }
            }

        });
    </script>


}